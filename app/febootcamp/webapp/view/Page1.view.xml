<mvc:View
    controllerName="febootcamp.controller.Page1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">

    <Page id="page1" title="Page 1">
        <content>
          <Title id="page1title" text="Hello, Roro!" class="page1title" />
          <Button
					id="BadgedButton"
					class="sapUiTinyMarginBeginEnd"
					icon="sap-icon://paper-plane"
					text="Click to say Hello!"
          press="onButtonPress"/>
          
          <Panel id="Books" class="panelStyle" expandable="true" expanded="true" headerText="Book Chart" width="auto">
          <controls:VizFrame id="idVizFrame" vizType="column" width="100%" height="400px">
                    <controls:dataset>
                        <!-- Bind to Products array from JSONModel -->
                        <vizData:FlattenedDataset data="{/Books}">
                            <vizData:dimensions>
                                <vizData:DimensionDefinition name="Books" value="{name}"/>
                            </vizData:dimensions>
                            <vizData:measures>
                                <vizData:MeasureDefinition name="Book Title" value="{title}"/>
                            </vizData:measures>
                        </vizData:FlattenedDataset>
                    </controls:dataset>
                    <controls:feeds>
                        <viz:FeedItem uid="categoryAxis" type="Dimension" values="Books"/>
                        <viz:FeedItem uid="valueAxis" type="Measure" values="Book Title"/>
                    </controls:feeds>
                </controls:VizFrame>
          </Panel>  
        <Panel id="Books1" class="panelStyle" expandable="true" expanded="true" headerText="List" width="auto">
                </Panel> 
           
        </content>
         <footer>
            <Toolbar id="footerToolbar">
                <Button
                    id="nextButton"
                    text="Click Me to go to Page 2!"
                    press="onGoToPage2"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
